{
  "name": "@notion-stripe/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Notion-Stripe integration with shared types",
  "workspaces": [
    "stripe-app",
    "worker"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev:worker": "npm run dev -w @notion-stripe/worker",
    "lint:stripe-app": "npm run lint -w @notion-stripe/stripe-app",
    "test:stripe-app": "npm run test -w @notion-stripe/stripe-app",
    "deploy:worker": "npm run deploy -w @notion-stripe/worker"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18"
  }
}